.images{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.images-uploader{
  width: 100%;
  margin-left: 3%;
  padding: 0px 0px 9px;
}
.images-uploader__file {
  float: left;
  margin-right: 9px;
  margin-top: 9px;
}
.images-uploader__img {
  display: block;
  width: 60px;
  height: 60px;
}
.images-uploader__file_status {
  position: relative;
}


.images-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-top: 9px;
  width: 60px;
  height: 60px;
  border: 1px solid #d9d9d9;
}
.images-uploader__input-box:before, .images-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.images-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.images-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.images-uploader__input-box:active {
  border-color: #999;
}
.images-uploader__input-box:active:before, .weui-uploader__input-box:active:after {
  background-color: #999;
}



